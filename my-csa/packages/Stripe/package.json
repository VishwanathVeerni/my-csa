{
    "name": "@scandiweb/stripe",
    "version": "1.0.0",
    "description": "Stripe frontend compatibility for ScandiPWA",
    "license": "UNLICENSED",
    "scandipwa": {
        "type": "extension"
    },
    "dependencies": {
        "@stripe/stripe-js": "^1.32.0",
        "eslint-plugin-header": "^3.1.1"
    },
    "eslintConfig": {
        "extends": "@scandipwa",
        "plugins": [
            "react",
            "header"
        ],
        "rules": {
            "max-lines": "off",
            "header/header": [
                2,
                "block",
                [
                    "*",
                    " * Stripe compatibility for ScandiPWA",
                    " * @copyright Scandiweb, Inc. All rights reserved.",
                    " "
                ],
                2
            ]
        }
    }
}
